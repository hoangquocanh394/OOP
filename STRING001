import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int t=sc.nextInt();
        sc.nextLine();
        while(t>0){
            t--;
            String s=sc.next();
            int k=sc.nextInt();
            System.out.println("The character at position "+ k +" is "+s.charAt(k));
        }
        sc.close();
    }
}
